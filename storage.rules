rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Candidates can create, update, and delete their own files.
    // Reading is restricted to the owner. This is the main security fix.
    // A future rule could allow companies to read if an application exists,
    // but that requires careful implementation and data modeling.
    match /candidates/{candidateId}/{allPaths=**} {
      allow read, write: if isOwner(candidateId);
    }

    // Companies can manage their own files.
    match /companies/{companyId}/{allPaths=**} {
      allow read, write: if isOwner(companyId);
    }

    // Default deny (avoid accidental broad access via future rules).
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
