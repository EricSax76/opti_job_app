rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isCandidate() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/candidates/$(request.auth.uid));
    }

    function isCompany() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/companies/$(request.auth.uid));
    }

    function getJobOfferCompanyId(jobOfferId) {
      return get(/databases/$(database)/documents/jobOffers/$(jobOfferId)).data.companyId;
    }

    match /candidates/{candidateId} {
      allow create: if isSignedIn() && request.auth.uid == candidateId;
      allow read, update, delete: if isCandidate() && request.auth.uid == candidateId;
    }

    match /companies/{companyId} {
      allow create: if isSignedIn() && request.auth.uid == companyId;
      allow read, update, delete: if isCompany() && request.auth.uid == companyId;
    }

    match /jobOffers/{offerId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isCompany();
    }

    match /applications/{applicationId} {
      allow create: if isCandidate() && request.auth.uid == request.resource.data.candidateId;
      allow read: if true;
      allow update: if isCompany() && getJobOfferCompanyId(resource.data.jobOfferId) == request.auth.uid;
      allow delete: if false; // Deletion is not allowed for now.
    }
  }
}
