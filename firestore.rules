rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // IMPORTANT:
    // Do NOT infer "candidate/company" from existence of user-writable profile docs.
    // Use custom claims (request.auth.token.role) set by a trusted backend.
    // Optional fallback: a role registry doc only writable by admin.
    function isAdmin() {
      return isSignedIn() &&
        ((request.auth.token.admin == true) || (request.auth.token.role == 'admin'));
    }

    function roleFromToken() {
      return (isSignedIn() && request.auth.token.role is string)
        ? request.auth.token.role
        : null;
    }

    function roleFromRegistry() {
      return (isSignedIn() &&
          exists(/databases/$(database)/documents/user_roles/$(request.auth.uid)))
        ? get(/databases/$(database)/documents/user_roles/$(request.auth.uid)).data.role
        : null;
    }

    function hasRole(role) {
      return roleFromToken() == role || roleFromRegistry() == role;
    }

    function isCandidate() {
      return hasRole('candidato') || hasRole('candidate');
    }

    function isCompany() {
      return hasRole('empresa') || hasRole('company');
    }

    // Admin-managed role registry (alternative to custom claims).
    match /user_roles/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow write: if isAdmin();
    }

    match /candidates/{candidateId} {
      allow create: if isCandidate()
        && request.auth.uid == candidateId
        && request.resource.data.uid == request.auth.uid;
      allow read: if (isCandidate()
          && request.auth.uid == candidateId
          && resource.data.uid == request.auth.uid)
        || isCompany();
      allow update, delete: if isCandidate()
        && request.auth.uid == candidateId
        && resource.data.uid == request.auth.uid;

      match /curriculum/{curriculumId} {
        allow create, update, delete: if isCandidate()
          && request.auth.uid == candidateId;
        allow read: if (isCandidate() && request.auth.uid == candidateId)
          || isCompany();
      }
    }

    match /companies/{companyId} {
      allow create: if isCompany() && request.auth.uid == companyId;
      allow read, update, delete: if isCompany() && request.auth.uid == companyId;
    }

    match /jobOffers/{offerId} {
      allow read: if isSignedIn();
      allow create: if isCompany() && request.resource.data.companyUid == request.auth.uid;
      allow update: if isCompany() && resource.data.companyUid == request.auth.uid && request.resource.data.companyUid == request.auth.uid;
      allow delete: if isCompany() && resource.data.companyUid == request.auth.uid;
    }

    match /applications/{applicationId} {
      allow create: if isCandidate()
        && request.auth.uid == request.resource.data.candidateId;

      allow read: if (isCandidate()
          && request.auth.uid == resource.data.candidateId)
        || (isCompany()
          && request.auth.uid == resource.data.companyUid);

      allow update: if isCompany()
        && request.auth.uid == resource.data.companyUid;

      allow delete: if false; // Deletion is not allowed for now.
    }

    match /calendarEvents/{eventId} {
      allow create: if isSignedIn()
        && request.resource.data.owner_uid == request.auth.uid;
      allow read, update, delete: if isSignedIn()
        && resource.data.owner_uid == request.auth.uid;
    }
  }
}
