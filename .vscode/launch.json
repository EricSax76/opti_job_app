{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "aiBaseUrl",
            "type": "promptString",
            "description": "AI_BASE_URL (URL del backend de IA)",
            "default": "http://localhost:8080"
        }
    ],
    "configurations": [
        {
            "name": "Flutter (Chrome) - con IA",
            "request": "launch",
            "type": "dart",
            "args": [
                "--web-hostname=127.0.0.1",
                "--web-port=5500",
                "--dart-define=AI_BASE_URL=${input:aiBaseUrl}"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Iniciar el backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/src/index.js", // Ruta al archivo principal del backend
            "env": {
                "NODE_ENV": "development" // Configuraci√≥n del entorno
            },
            "cwd": "${workspaceFolder}/backend", // Carpeta de trabajo
            "console": "integratedTerminal" // Ejecutar en la terminal integrada
        }
    ]
}
