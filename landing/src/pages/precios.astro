---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Precios - OptiJob">
  <main class="pricing-page">
    <!-- Hero -->
    <section class="pricing-hero">
      <div class="container">
        <h1>Planes y precios</h1>
        <p class="hero-subtitle">
          Elige el plan que mejor se adapte a tus necesidades. Sin permanencia,
          cancela cuando quieras.
        </p>
      </div>
    </section>

    <!-- Pricing Cards -->
    <section class="pricing-section">
      <div class="container">
        <!-- Toggle para Candidatos/Empresas -->
        <div class="pricing-toggle">
          <button class="toggle-btn active" data-target="candidates"
            >Candidatos</button
          >
          <button class="toggle-btn" data-target="companies"
            >Empresas & Recruiters</button
          >
        </div>

        <!-- Planes para Candidatos -->
        <div class="pricing-group" id="candidates-pricing">
          <div class="pricing-cards">
            <div class="price-card featured">
              <h3>Candidatos</h3>
              <div class="price">
                <span class="amount">0€</span>
                <span class="period">/ siempre</span>
              </div>
              <p class="plan-description">
                Totalmente gratis para buscar empleo. Sin costes ocultos.
              </p>
              <ul class="features">
                <li>Perfil profesional ilimitado</li>
                <li>CV mejorado por IA</li>
                <li>Matching automático con ofertas</li>
                <li>Contacto directo con empresas</li>
                <li>Seguimiento de candidaturas</li>
                <li>Notificaciones en tiempo real</li>
                <li>Soporte por email</li>
              </ul>
              <a href="/registro" class="btn btn-primary btn-block"
                >Comenzar gratis</a
              >
            </div>
          </div>
        </div>

        <!-- Planes para Empresas -->
        <div class="pricing-group hidden" id="companies-pricing">
          <div class="pricing-cards three-col">
            <div class="price-card">
              <h3>Básico</h3>
              <div class="price">
                <span class="amount">79€</span>
                <span class="period">/ mes</span>
              </div>
              <p class="plan-description">
                Ideal para empresas con pocas contrataciones al año
              </p>
              <ul class="features">
                <li>Hasta 3 ofertas activas</li>
                <li>Matching con IA</li>
                <li>Gestión de candidatos</li>
                <li>Comunicación directa</li>
                <li>Soporte por email</li>
              </ul>
              <a href="/registro" class="btn btn-secondary btn-block">Empezar</a
              >
            </div>

            <div class="price-card featured">
              <div class="popular-badge">Más popular</div>
              <h3>Profesional</h3>
              <div class="price">
                <span class="amount">149€</span>
                <span class="period">/ mes</span>
              </div>
              <p class="plan-description">
                Para empresas en crecimiento con contratación regular
              </p>
              <ul class="features">
                <li>Ofertas ilimitadas</li>
                <li>Generación de ofertas con IA</li>
                <li>Analytics avanzados</li>
                <li>Búsqueda proactiva de candidatos</li>
                <li>Integración con ATS</li>
                <li>Soporte prioritario</li>
                <li>Gestor de cuenta dedicado</li>
              </ul>
              <a href="/registro" class="btn btn-primary btn-block">Empezar</a>
            </div>

            <div class="price-card">
              <h3>Empresarial</h3>
              <div class="price">
                <span class="amount">Personalizado</span>
              </div>
              <p class="plan-description">
                Solución enterprise para grandes equipos de RRHH
              </p>
              <ul class="features">
                <li>Todo lo de Profesional</li>
                <li>Usuarios ilimitados</li>
                <li>API personalizada</li>
                <li>Formación del equipo</li>
                <li>Account manager dedicado</li>
                <li>SLA garantizado</li>
                <li>Soporte 24/7</li>
              </ul>
              <a href="/contacto" class="btn btn-secondary btn-block"
                >Contactar</a
              >
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Comparativa detallada -->
    <section class="comparison-section">
      <div class="container">
        <h2 class="section-title">Comparativa de planes</h2>
        <div class="comparison-table">
          <table>
            <thead>
              <tr>
                <th>Funcionalidad</th>
                <th>Básico</th>
                <th>Profesional</th>
                <th>Empresarial</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="feature-name">Ofertas activas</td>
                <td>Hasta 3</td>
                <td>Ilimitadas</td>
                <td>Ilimitadas</td>
              </tr>
              <tr>
                <td class="feature-name">Matching con IA</td>
                <td>✓</td>
                <td>✓</td>
                <td>✓</td>
              </tr>
              <tr>
                <td class="feature-name">Generación de ofertas con IA</td>
                <td>-</td>
                <td>✓</td>
                <td>✓</td>
              </tr>
              <tr>
                <td class="feature-name">Analytics avanzados</td>
                <td>-</td>
                <td>✓</td>
                <td>✓</td>
              </tr>
              <tr>
                <td class="feature-name">Búsqueda proactiva</td>
                <td>-</td>
                <td>✓</td>
                <td>✓</td>
              </tr>
              <tr>
                <td class="feature-name">Usuarios del equipo</td>
                <td>1</td>
                <td>Hasta 5</td>
                <td>Ilimitados</td>
              </tr>
              <tr>
                <td class="feature-name">Integración ATS</td>
                <td>-</td>
                <td>✓</td>
                <td>✓ + API custom</td>
              </tr>
              <tr>
                <td class="feature-name">Soporte</td>
                <td>Email</td>
                <td>Prioritario</td>
                <td>24/7 + Dedicado</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="faq-section">
      <div class="container">
        <h2 class="section-title">Preguntas frecuentes</h2>
        <div class="faq-grid">
          <div class="faq-item">
            <h3>¿Los candidatos tienen que pagar?</h3>
            <p>No. OptiJob es 100% gratis para candidatos y siempre lo será.</p>
          </div>
          <div class="faq-item">
            <h3>¿Hay permanencia en los planes de empresa?</h3>
            <p>
              No. Puedes cancelar tu suscripción en cualquier momento sin
              penalización.
            </p>
          </div>
          <div class="faq-item">
            <h3>¿Qué métodos de pago aceptáis?</h3>
            <p>
              Aceptamos tarjeta de crédito/débito y transferencia bancaria para
              planes anuales.
            </p>
          </div>
          <div class="faq-item">
            <h3>¿Puedo cambiar de plan?</h3>
            <p>
              Sí, puedes actualizar o degradar tu plan en cualquier momento. Los
              cambios se aplican en el siguiente ciclo de facturación.
            </p>
          </div>
          <div class="faq-item">
            <h3>¿Ofrecéis descuentos por pago anual?</h3>
            <p>
              Sí, los planes anuales tienen un 20% de descuento respecto al pago
              mensual.
            </p>
          </div>
          <div class="faq-item">
            <h3>¿Hay límite de candidatos?</h3>
            <p>
              No. Puedes recibir y gestionar tantos candidatos como necesites en
              todos los planes.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <h2>¿Listo para empezar?</h2>
          <p>Comienza gratis hoy y descubre el poder del matching con IA</p>
          <a href="/registro" class="btn btn-primary btn-lg">Crear cuenta</a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  // Toggle entre planes de candidatos y empresas
  const toggleButtons = document.querySelectorAll(".toggle-btn");
  const pricingGroups = document.querySelectorAll(".pricing-group");

  toggleButtons.forEach((button) => {
    button.addEventListener("click", () => {
      const target = button.dataset.target;

      // Update active button
      toggleButtons.forEach((btn) => btn.classList.remove("active"));
      button.classList.add("active");

      // Show/hide pricing groups
      pricingGroups.forEach((group) => {
        if (group.id === `${target}-pricing`) {
          group.classList.remove("hidden");
        } else {
          group.classList.add("hidden");
        }
      });
    });
  });
</script>

<style>
  .pricing-hero {
    padding: var(--space-5xl) 0 var(--space-3xl);
    text-align: center;
    background: linear-gradient(to bottom, #ffffff, var(--color-bg-secondary));
  }

  .pricing-hero h1 {
    font-size: var(--text-4xl);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-lg);
  }

  .hero-subtitle {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .pricing-section {
    padding: var(--space-4xl) 0;
    background: var(--color-bg-secondary);
  }

  .pricing-toggle {
    display: flex;
    gap: var(--space-sm);
    justify-content: center;
    margin-bottom: var(--space-4xl);
    background: var(--color-bg-tertiary);
    padding: var(--space-xs);
    border-radius: var(--radius-lg);
    width: fit-content;
    margin-left: auto;
    margin-right: auto;
  }

  .toggle-btn {
    padding: var(--space-md) var(--space-xl);
    border: none;
    background: transparent;
    color: var(--color-text-secondary);
    font-weight: 600;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--duration-normal) var(--ease-in-out);
  }

  .toggle-btn.active {
    background: var(--color-bg-primary);
    color: var(--color-primary);
    box-shadow: var(--shadow-sm);
  }

  .pricing-group {
    transition: opacity var(--duration-normal) var(--ease-in-out);
  }

  .pricing-group.hidden {
    display: none;
  }

  .pricing-cards {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-2xl);
    max-width: 500px;
    margin: 0 auto;
  }

  .pricing-cards.three-col {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    max-width: 1100px;
  }

  .price-card {
    position: relative;
    background: var(--color-bg-primary);
    padding: var(--space-3xl);
    border-radius: var(--radius-lg);
    border: 2px solid var(--color-border);
    transition: all var(--duration-normal) var(--ease-in-out);
  }

  .price-card:hover {
    border-color: var(--color-primary-light);
    box-shadow: var(--shadow-md);
  }

  .price-card.featured {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-lg);
  }

  .popular-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-primary);
    color: white;
    padding: var(--space-xs) var(--space-md);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: 600;
  }

  .price-card h3 {
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-lg);
    text-align: center;
  }

  .price {
    text-align: center;
    margin-bottom: var(--space-md);
  }

  .price .amount {
    font-size: var(--text-4xl);
    font-weight: 800;
    color: var(--color-primary);
  }

  .price .period {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
  }

  .plan-description {
    text-align: center;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xl);
    min-height: 3em;
  }

  .features {
    list-style: none;
    padding: 0;
    margin-bottom: var(--space-xl);
  }

  .features li {
    padding: var(--space-sm) 0;
    color: var(--color-text-secondary);
    border-bottom: 1px solid var(--color-border);
    padding-left: var(--space-lg);
    position: relative;
  }

  .features li::before {
    content: "✓";
    position: absolute;
    left: 0;
    color: var(--color-secondary);
    font-weight: bold;
  }

  .features li:last-child {
    border-bottom: none;
  }

  .btn-block {
    width: 100%;
    justify-content: center;
  }

  /* Comparison Table */
  .comparison-section {
    padding: var(--space-5xl) 0;
    background: var(--color-bg-primary);
  }

  .section-title {
    text-align: center;
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-4xl);
  }

  .comparison-table {
    max-width: 1000px;
    margin: 0 auto;
    overflow-x: auto;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    background: var(--color-bg-primary);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
  }

  thead {
    background: var(--color-bg-tertiary);
  }

  th {
    padding: var(--space-lg);
    text-align: center;
    font-weight: 600;
    color: var(--color-text-primary);
    border-bottom: 2px solid var(--color-border);
  }

  td {
    padding: var(--space-md) var(--space-lg);
    text-align: center;
    color: var(--color-text-secondary);
    border-bottom: 1px solid var(--color-border);
  }

  td.feature-name {
    text-align: left;
    font-weight: 500;
    color: var(--color-text-primary);
  }

  tbody tr:hover {
    background: var(--color-bg-secondary);
  }

  /* FAQ */
  .faq-section {
    padding: var(--space-5xl) 0;
    background: var(--color-bg-secondary);
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-2xl);
    max-width: 1000px;
    margin: 0 auto;
  }

  .faq-item {
    background: var(--color-bg-primary);
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
  }

  .faq-item h3 {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
  }

  .faq-item p {
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .cta-section {
    padding: var(--space-5xl) 0;
    background: var(--color-bg-primary);
    border-top: 1px solid var(--color-border);
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
  }

  .cta-content p {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-2xl);
  }

  @media (max-width: 768px) {
    .pricing-hero h1 {
      font-size: var(--text-3xl);
    }

    .pricing-toggle {
      flex-direction: column;
      width: 100%;
    }

    .pricing-cards.three-col {
      grid-template-columns: 1fr;
    }

    table {
      font-size: var(--text-sm);
    }

    th,
    td {
      padding: var(--space-sm);
    }
  }
</style>
