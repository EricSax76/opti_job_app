<style>
  /* Reuse same styles as candidatos.astro */
  .product-hero {
    padding: var(--space-5xl) 0 var(--space-4xl);
    background: linear-gradient(to bottom, #ffffff, var(--color-bg-secondary));
    text-align: center;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-md);
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-primary);
    margin-bottom: var(--space-xl);
  }

  .product-hero h1 {
    font-size: var(--text-4xl);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-lg);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-subtitle {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-3xl);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .benefits-section {
    padding: var(--space-5xl) 0;
    background: var(--color-bg-primary);
  }

  .section-title {
    text-align: center;
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-4xl);
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-2xl);
    max-width: 1000px;
    margin: 0 auto;
  }

  .benefit-card {
    text-align: center;
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    transition: all var(--duration-normal) var(--ease-in-out);
  }

  .benefit-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
    border-color: var(--color-primary-light);
  }

  .benefit-icon {
    font-size: 3rem;
    margin-bottom: var(--space-md);
  }

  .benefit-card h3 {
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
  }

  .benefit-card p {
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .features-section {
    padding: var(--space-5xl) 0;
    background: var(--color-bg-secondary);
  }

  .feature-block {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4xl);
    align-items: center;
    margin-bottom: var(--space-4xl);
    max-width: 1100px;
    margin-left: auto;
    margin-right: auto;
  }

  .feature-block.reverse {
    direction: rtl;
  }

  .feature-block.reverse > * {
    direction: ltr;
  }

  .feature-content h3 {
    font-size: var(--text-2xl);
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: var(--space-lg);
  }

  .feature-content p {
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-md);
  }

  .feature-content ul {
    list-style: none;
    padding-left: 0;
    margin-bottom: var(--space-md);
  }

  .feature-content li {
    padding-left: var(--space-lg);
    position: relative;
    margin-bottom: var(--space-sm);
    color: var(--color-text-secondary);
  }

  .feature-content li::before {
    content: "‚úì";
    position: absolute;
    left: 0;
    color: var(--color-secondary);
    font-weight: bold;
  }

  .feature-note {
    background: var(--color-bg-tertiary);
    padding: var(--space-md);
    border-radius: var(--radius-md);
    border-left: 3px solid var(--color-primary);
  }

  .visual-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-xl);
    background: var(--color-bg-primary);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
  }

  .how-section {
    padding: var(--space-5xl) 0;
    background: var(--color-bg-primary);
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: var(--space-2xl);
    max-width: 1000px;
    margin: 0 auto;
  }

  .step {
    text-align: center;
  }

  .step-number {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: var(--color-primary);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-2xl);
    font-weight: 700;
    margin: 0 auto var(--space-lg);
  }

  .step h3 {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
  }

  .step p {
    color: var(--color-text-secondary);
  }

  /* Pricing Preview */
  .pricing-preview {
    padding: var(--space-5xl) 0;
    background: var(--color-bg-secondary);
  }

  .pricing-intro {
    text-align: center;
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-4xl);
  }

  .pricing-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-2xl);
    max-width: 1000px;
    margin: 0 auto var(--space-3xl);
  }

  .price-card {
    position: relative;
    background: var(--color-bg-primary);
    padding: var(--space-2xl);
    border-radius: var(--radius-lg);
    border: 2px solid var(--color-border);
    text-align: center;
    transition: all var(--duration-normal) var(--ease-in-out);
  }

  .price-card.featured {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-lg);
    transform: scale(1.05);
  }

  .popular-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-primary);
    color: white;
    padding: var(--space-xs) var(--space-md);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: 600;
  }

  .price-card h3 {
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--space-lg);
  }

  .price {
    margin-bottom: var(--space-xl);
  }

  .price .amount {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-primary);
  }

  .price .period {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
  }

  .price-card .features {
    list-style: none;
    padding: 0;
    text-align: left;
  }

  .price-card .features li {
    padding: var(--space-sm) 0;
    color: var(--color-text-secondary);
    border-bottom: 1px solid var(--color-border);
  }

  .price-card .features li:last-child {
    border-bottom: none;
  }

  .pricing-cta {
    text-align: center;
  }

  .cta-section {
    padding: var(--space-5xl) 0;
    background: var(--color-bg-primary);
    border-top: 1px solid var(--color-border);
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
  }

  .cta-content p {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-2xl);
  }

  @media (max-width: 768px) {
    .product-hero h1 {
      font-size: var(--text-3xl);
    }

    .feature-block {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }

    .feature-block.reverse {
      direction: ltr;
    }

    .price-card.featured {
      transform: scale(1);
    }
  }
</style>
